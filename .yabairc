#!/usr/bin/env sh

if command -v yabai >/dev/null; then
  yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
  sudo yabai --load-sa
fi

# global settings
yabai -m config                                 \
    external_bar                 off:40:0       \
    menubar_opacity              1.0            \
    mouse_follows_focus          on             \
    focus_follows_mouse          on             \
    display_arrangement_order    default        \
    window_origin_display        default        \
    window_placement             second_child   \
    window_insertion_point       focused        \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_easing      ease_out_circ  \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.90           \
    window_opacity               off            \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  0              \
    bottom_padding               0              \
    left_padding                 0              \
    right_padding                0              \
    window_gap                   06             \
    layout                       bsp            \
    mouse_modifier               fn             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Finder$" manage=off

########################################
# App → Space assignment
########################################

# Terminal → Space 1
yabai -m rule --add app="^Terminal$" space=1
yabai -m rule --add app="^kitty$" space=1

# VS Code → Space 2
yabai -m rule --add app="^Code$" space=2

# Chrome → Space 3
yabai -m rule --add app="^Google Chrome$" space=3

# Telegram -> space 4
yabai -m rule --add app="^Telegram$" space=4 follow=off

# Basecamp -> space 4
yabai -m rule --add app="^Basecamp$" space=4 follow=off

# WhatsApp -> space 4
yabai -m rule --add app="^WhatsApp$" space=4 follow=off

# Lark - space 4
yabai -m rule --add app="^Lark$" space=4 follow=off

# YouTube Music -> space 5
yabai -m rule --add app="^YouTube Music$" space=5 follow=off

# Spotify -> space 5
yabai -m rule --add app="^Spotify$" space=5 follow=off

command -v jq >/dev/null || exit 0

# When a window is created
yabai -m signal --add event=window_created \
  action="$HOME/.yabai/auto-float-by-space.sh"

# When a window changes space
yabai -m signal --add event=window_moved \
  action="$HOME/.yabai/auto-float-by-space.sh"

# When space changes
yabai -m signal --add event=space_changed \
  action="$HOME/.yabai/auto-float-by-space.sh"

yabai -m signal --add event=space_changed \
  action="$HOME/.yabai/reapply-float-for-space.sh"

echo "yabai configuration loaded.."
